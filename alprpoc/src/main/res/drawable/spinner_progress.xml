<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">

    <shape
        android:innerRadius="22dp"
        android:shape="ring"
        android:thickness="1.5dp"
        android:useLevel="false">

        <size
            android:width="50dp"
            android:height="50dp" />

        <gradient
            android:centerColor="#80E82A2C"
            android:centerY="0.5"
            android:endColor="#ffE82A2C"
            android:startColor="#00E82A2C"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>